<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="activity"
            type="com.lakue.oburie.ui.login.LoginActivity" />
        <variable
            name="vm"
            type="com.lakue.oburie.ui.login.LoginViewModel" />
    </data>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/applesdgothicneob"
                        android:textSize="17dp"
                        android:text="닉네임을 입력해주세요."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:inputType="text"
                        android:text="@={vm.liveName}"
                        android:layout_marginTop="28dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="12dp"
                        android:paddingLeft="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="12dp"
                        android:background="@drawable/background_round_0_stroke_dddddd"
                        android:fontFamily="@font/applesdgothicneol"
                        android:hint="이름을 입력해주세요."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />

                    <View
                        android:layout_marginTop="24dp"
                        android:background="@color/gray_d"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:onClick="@{() -> activity.onLoginClose()}"
                            android:id="@+id/tv_close"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/applesdgothicneol"
                            android:textColor="@color/gray_900"
                            android:text="닫기"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <View
                            android:background="@color/gray_d"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:onClick="@{() -> activity.onLogin()}"
                            android:id="@+id/tv_login"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/applesdgothicneob"
                            android:textColor="@color/point_1000"
                            android:text="등록"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</layout>