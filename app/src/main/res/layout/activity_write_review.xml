<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="vm"
            type="com.lakue.oburie.ui.review.write.WriteReviewViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            app:headTitle="@{@string/write_review}"
            layout="@layout/include_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.lakue.oburie.custom.RoundedImageView
                    android:scaleType="centerCrop"
                    app:rectRadius="8dp"
                    android:src="@drawable/default_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/applesdgothicneob"
                        tools:text="라꾸"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/applesdgothicneol"
                        tools:text="라꾸"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/applesdgothicneol"
                        tools:text="라꾸"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/applesdgothicneol"
                        tools:text="라꾸"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/applesdgothicneol"
                    android:text="만족도"
                    android:textColor="@color/color_dark_ffffff_000000"
                    android:textSize="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <com.willy.ratingbar.ScaleRatingBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srb_stepSize="1"
                    android:gravity="center"
                    app:srb_minimumStars="1"
                    app:srb_drawableEmpty="@drawable/ic_review_bicstar_off"
                    app:srb_drawableFilled="@drawable/ic_review_bicstar_on"
                    app:srb_isIndicator="false"
                    app:srb_starHeight="36dp"
                    app:srb_starPadding="1dp"
                    app:srb_starWidth="36dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/applesdgothicneol"
                    android:text="만족도"
                    android:textColor="@color/color_dark_ffffff_000000"
                    android:textSize="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <com.willy.ratingbar.ScaleRatingBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srb_stepSize="1"
                    android:gravity="center"
                    app:srb_minimumStars="1"
                    app:layout_constraintEnd_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:srb_drawableEmpty="@drawable/ic_review_bicstar_off"
                    app:srb_drawableFilled="@drawable/ic_review_bicstar_on"
                    app:srb_isIndicator="false"
                    app:srb_starHeight="36dp"
                    app:srb_starPadding="1dp"
                    app:srb_starWidth="36dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/applesdgothicneol"
                    android:text="만족도"
                    android:textColor="@color/color_dark_ffffff_000000"
                    android:textSize="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>

                <com.willy.ratingbar.ScaleRatingBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srb_stepSize="1"
                    android:gravity="center"
                    app:srb_minimumStars="1"
                    app:srb_drawableEmpty="@drawable/ic_review_bicstar_off"
                    app:srb_drawableFilled="@drawable/ic_review_bicstar_on"
                    app:srb_isIndicator="false"
                    app:srb_starHeight="36dp"
                    app:srb_starPadding="1dp"
                    app:srb_starWidth="36dp" />

            </LinearLayout>

            <EditText
                android:layout_marginBottom="24dp"
                android:padding="16dp"
                android:gravity="top"
                android:textColor="@color/color_dark_ffffff_000000"
                android:textSize="14dp"
                android:fontFamily="@font/applesdgothicneol"
                android:hint="리뷰을 작성해주세요."
                android:background="@drawable/background_round_5_stroek_dddddd"
                android:layout_marginTop="24dp"
                android:minHeight="400dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            style="@style/BottomCompleteButton"
            android:text="@string/reply_answer"/>

    </LinearLayout>

</layout>
