<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="chat"
            type="com.lakue.oburie.model.Chatting" />
    </data>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="11dp"
            android:layout_gravity="bottom"
            android:textColor="@color/gray_d"
            android:fontFamily="@font/applesdgothicneol"
            tools:text="10:48 오전"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:backgroundTint="@color/point_800"
            android:background="@drawable/background_round_5"
            android:textColor="@color/white"
            tools:text="안녕하세요."
            android:text="@{chat.text}"
            android:fontFamily="@font/applesdgothicneol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
