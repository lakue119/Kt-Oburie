<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="vm"
            type="com.lakue.oburie.ui.userinfo.UserInfoSettingViewModel" />
        <variable
            name="activity"
            type="com.lakue.oburie.ui.userinfo.UserInfoSettingActivity" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            app:headTitle="@{@string/user_info_setting}"
            layout="@layout/include_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingTop="36dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="24dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.lakue.oburie.custom.RoundedImageView
                            android:foreground="@color/black_op50"
                            app:rectRadius="50dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/default_icon"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>


                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_w_camera"
                            android:layout_width="36dp"
                            android:layout_height="36dp"/>

                    </FrameLayout>

                    <TextView
                        android:layout_marginTop="40dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:text="닉네임"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/background_round_5_stroek_dddddd"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        tools:text="라꾸"
                        android:fontFamily="@font/applesdgothicneol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="24dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:text="자기소개"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/background_round_5_stroek_dddddd"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        tools:text="라꾸"
                        android:fontFamily="@font/applesdgothicneol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                    <View
                        android:layout_marginTop="24dp"
                        android:background="@color/gray_e"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_marginTop="24dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:text="웹 사이트"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/background_round_5_stroek_dddddd"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        tools:text="라꾸"
                        android:fontFamily="@font/applesdgothicneol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="24dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:text="Instagram"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/background_round_5_stroek_dddddd"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        tools:text="라꾸"
                        android:fontFamily="@font/applesdgothicneol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="24dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:text="Youtube"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/background_round_5_stroek_dddddd"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        tools:text="라꾸"
                        android:fontFamily="@font/applesdgothicneol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="24dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:text="Twitter"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/background_round_5_stroek_dddddd"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        tools:text="라꾸"
                        android:fontFamily="@font/applesdgothicneol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginTop="24dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        android:text="Facebook"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:inputType="text"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="16dp"
                        android:paddingLeft="16dp"
                        android:background="@drawable/background_round_5_stroek_dddddd"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="14dp"
                        tools:text="라꾸"
                        android:fontFamily="@font/applesdgothicneol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:backgroundTint="@color/color_dark_000000_ffffff"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:foreground="@drawable/ripple_action"
                style="@style/BottomCompleteButton"
                android:text="@string/regist"/>

        </LinearLayout>

    </LinearLayout>
</layout>
