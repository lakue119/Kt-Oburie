<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.lakue.oburie.ui.myresume.MyResumeViewModel" />
        <variable
            name="pos"
            type="Integer" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="@color/gray_d"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.lakue.oburie.custom.RoundedImageView
                android:layout_marginLeft="20dp"
                app:rectRadius="4dp"
                android:src="@color/gray_d"
                android:layout_width="64dp"
                android:layout_height="64dp"/>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="테스트"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/applesdgothicneol"
                    android:text="테스트"
                    android:textColor="@color/gray_999"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                app:justifyContent="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:toggle_text="5:30PM" />

            </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="4dp"
                android:src="@drawable/pencil"
                android:layout_width="36dp"
                android:layout_height="36dp"/>

            <ImageView
                android:padding="4dp"
                android:src="@drawable/icon_profile_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"/>

        </LinearLayout>

    </LinearLayout>
</layout>
