<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profile"
            type="com.lakue.oburie.model.Profile" />
    </data>
    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">


            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@{profile.badge}"
                    android:fontFamily="@font/applesdgothicneob"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/point_1000"
                    android:background="@drawable/background_round_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <ImageView
                    android:src="@drawable/ic_facebook"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <ImageView
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/ic_insta"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>

                <ImageView
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/ic_youtube"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="16dp"
                android:fontFamily="@font/applesdgothicneoeb"
                android:textSize="23dp"
                android:textColor="@color/color_dark_ffffff_000000"
                android:text="akdsfjlakewjrkl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.lakue.oburie.custom.RoundedImageView
                    app:rectRadius="50dp"
                    android:src="@color/black"
                    android:layout_width="56dp"
                    android:layout_height="56dp"/>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/applesdgothicneob"
                        android:text="asdfsdaf"
                        android:textColor="@color/color_dark_ffffff_000000"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:fontFamily="@font/applesdgothicneol"
                        android:text="asdfsdaf"
                        android:textColor="@color/gray_900"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/applesdgothicneol"
                    android:text="조회수 : 1"
                    android:textColor="@color/gray_900"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="16dp"
                android:fontFamily="@font/applesdgothicneoeb"
                android:textSize="20dp"
                android:textColor="@color/color_dark_ffffff_000000"
                android:text="소개"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/gray_500"
                android:background="@drawable/background_round_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                android:fontFamily="@font/applesdgothicneoeb"
                android:textSize="20dp"
                android:textColor="@color/color_dark_ffffff_000000"
                android:text="경력"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/gray_500"
                android:background="@drawable/background_round_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                android:fontFamily="@font/applesdgothicneoeb"
                android:textSize="20dp"
                android:textColor="@color/color_dark_ffffff_000000"
                android:text="수상내역"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/gray_500"
                android:background="@drawable/background_round_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                android:fontFamily="@font/applesdgothicneoeb"
                android:textSize="20dp"
                android:textColor="@color/color_dark_ffffff_000000"
                android:text="저는 이런사람이에요! 😺"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</layout>